<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="#FFEB3B"
    tools:context=".addfood">

    <TextView
        android:layout_width="292dp"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:text="Add Food"
        android:textColor="@color/black"
        android:textSize="50dp"

        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:id="@+id/wedid1"
        android:hint="Register ID"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:background="@drawable/edittextbackground"
        android:layout_marginBottom="30dp"
        android:padding="20dp"/>


    <CheckBox
        android:id="@+id/checkBoxv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Veg" />
    <CheckBox
        android:id="@+id/checkBoxn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Non-Veg" />
    <CheckBox
        android:id="@+id/checkBoxj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jain" />


    <EditText
        android:id="@+id/foodlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter food items, each seperated by comma"
        android:gravity="start|top"
        android:inputType="textMultiLine" />
    <EditText
        android:id="@+id/foodqua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Estimated quantity"
        android:gravity="start|top"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/datep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Pickup Date"
        android:inputType="date" />
    <EditText
        android:id="@+id/timep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Pickup Time"
        android:ems="10"
        android:inputType="time" />
    <Button
        android:id="@+id/wloc"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/teal_200"
        android:text="Fetch Location"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tvloc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/submitw"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/black"
        android:text="submit"
        android:textSize="20dp" />




</LinearLayout>